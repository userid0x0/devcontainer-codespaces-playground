{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "problemMatcher": ["$gcc"],
        "command": "make",
        "args": [
          "all"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Clean",
        "type": "shell",
        "problemMatcher": ["$gcc"],
        "command": "make",
        "args": [
          "clean"
        ],
        "group": {
          "kind": "build"
        }
      }
    ]
  }